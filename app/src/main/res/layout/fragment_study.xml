<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.StudyFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box3"
            android:text="단어 공부하기"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/dark_red"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단어 퀴즈와 개인 단어 관리로 학습하세요!"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0, 1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="30dp"
            >

            <TableRow
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/quiz1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/box1"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:layout_gravity="center"
                        app:tint="@color/dark_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="주관식"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/dark_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quiz2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/box1"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_hearing_24"
                        app:tint="@color/dark_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="듣기 평가"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/dark_gray"/>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/wrongNote"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/box1"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_baseline_add_comment_24"
                        android:layout_gravity="center"
                        app:tint="@color/dark_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오답노트"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/dark_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/star"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/box1"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_baseline_star_24"
                        android:layout_gravity="center"
                        app:tint="@color/dark_gray" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="즐겨찾기"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/dark_gray"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</FrameLayout>