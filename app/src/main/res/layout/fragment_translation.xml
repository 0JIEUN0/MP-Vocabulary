<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TranslationFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="번역"
        android:layout_margin="20dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/dark_beige"
        android:gravity="center"
        />

    <ToggleButton
        android:id="@+id/toggleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="한국어"
        android:textOn="영어"
        android:background="@drawable/box2"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="-10dp"
        android:gravity="center"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:counterEnabled="true"
        app:counterMaxLength="5000"
        android:layout_margin="20dp"
        android:background="@drawable/box1"
        app:boxStrokeErrorColor="@color/dark_red"
        app:boxBackgroundMode="none"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:padding="10dp"
            android:textSize="17dp"
            android:gravity="start"
            android:textColor="@color/dark_gray"
            android:textAlignment="viewStart"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/transBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="10dp"
        android:tint="@color/dark_beige"
        android:src="@drawable/ic_baseline_autorenew_24"
        android:scaleType="fitCenter"
        android:background="@drawable/box2"
        android:layout_gravity="center"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <ToggleButton
        android:id="@+id/toggleBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="영어"
        android:textOn="한국어"
        android:background="@drawable/box2"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="-10dp"
        android:textColor="@color/dark_gray"
        android:enabled="false"/>

    <TextView
        android:id="@+id/transResultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:text=""
        android:padding="20dp"
        android:textSize="17dp"
        android:textColor="@color/dark_gray"
        android:background="@drawable/box1"
        />

</LinearLayout>